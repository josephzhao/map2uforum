{% extends 'Map2uForumBundle:Common:Layout/base.html.twig' %}

{% set LayoutTemplate = map2u_forum.category.user.show.layout_template %}

{%- block title -%}
	{{- 'title.category.show' | trans({'%category_name%': categories[0].name}, 'Map2uForumBundle') -}}
{%- endblock title -%}

{%- block sidebar -%}
	{%- spaceless -%}
	{{- parent() -}}
    {%- include 'Map2uForumBundle:Common:Layout/Sidebar/user_forum.html.twig' -%}
	{%- endspaceless -%}
{%- endblock sidebar -%}

{%- block body_content -%}
	{%- spaceless -%}

	{%- for category in categories -%}
		{%- include "Map2uForumBundle:User:Category/Partial/item_category.html.twig" -%}
	{%- else -%}
		<section class="row clearfix">
			<div class="well text-center">
				<span class="lead">
					{{- 'category.none' | trans({}, 'Map2uForumBundle') -}}
				</span>
			</div>
		</section>
	{%- endfor -%}

	{%- endspaceless -%}
{%- endblock body_content -%}
